<div class="row">
    <div class="col-8">
        <img class="fond" src="{{ asset("build/cards.jpeg") }}" alt="dds">
    </div>

</div>
{% for p in players %}
    {%  if p.id != app.user.id %}
        <h3>{{ p.username }}</h3>

        <div class="card-container">
        {% for c in cards %}

            {%  if c.user %}
            {%  if c.user.id == p.id %}
                <div class="hidden-card-background">
            <img class="hidden-card" src="{{ c.image }}" alt="">
                </div>
            {% endif %}
            {% endif %}


            {%  if c.userDiscard %}
                {%  if c.userDiscard.id == p.id %}
                    <div class="hidden-card-background">
                        <img class="hidden-card" src="{{ c.image }}" alt="">
                    </div>
                    {{ loop.index }}
                {% endif %}
            {% endif %}



        {% endfor %}

        </div>
    {% endif %}
{% endfor %}



<div class="card-container my-cards">
<h3> {{ app.user.username }} </h3>
    {% for c in cards %}
        {%  if c.user %}
            {%  if c.user.id == app.user.id %}
        <img src="{{ c.image }}" alt="">
                <form action="{{ path("play_card") }}" method="post">
                    <input type="hidden" name="card-to-play" value="{{ c.id }}">
                    <button type="submit">PLAY</button>
                </form>
                <form action="{{ path("discard_card_personal") }}" method="post">
                    <input type="hidden" name="card-to-play" value="{{ c.id }}">
                </form>
            {% endif %}
        {% endif %}


        {%  if c.userDiscard %}
            {%  if c.userDiscard.id == app.user.id %}
                <div class="hidden-card-background">
                    <img class="hidden-card" src="{{ c.image }}" alt="">
                </div>
                {{ loop.index }}
            {% endif %}
        {% endif %}
    {% endfor %}


  {% include '/home/_game-distrib-one-card.html.twig' %}


</div>


<h3> In deck : {{ count_cards_in_deck}} </h3>
<div class="card-container">
    <div class="hidden-card-background">
    <img class="hidden-card"  alt="">
    </div>
</div>

<div class="card-container">
    <h3> Visible cards on table </h3>
    {% for c in cards %}
        {%  if c.isVisible %}
            <img src="{{ c.image }}" alt="">
        {% endif %}
    {% endfor %}
</div>

<div class="card-container">
    <h3> Visible cards on table </h3>
    {% for c in cards %}
        {%  if c.isPlayed %}
            <img src="{{ c.image }}" alt="">
        {% endif %}
    {% endfor %}
</div>


