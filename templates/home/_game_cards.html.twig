<div class="row">
    <div class="col-8">
        <img class="fond" src="{{ asset("build/cards.jpeg") }}" alt="dds">
    </div>

</div>
{% for p in players %}
    {%  if p.id != app.user.id %}
        <h3>{{ p.username }}</h3>
        <div class="card-container">
            {% for c in cards %}
                {%  if c.user %}
                    {%  if c.user.id == p.id %}
                        <div class="hidden-card-background">
                            <img class="hidden-card" src="{{ c.image }}" alt="">
                        </div>
                        <form action="{{ path("take_card") }}" method="post">
                            <input type="hidden" name="card-to-take" value="{{ c.id }}">
                            <button type="submit">Take Card</button>
                        </form>
                    {% endif %}
                {% endif %}
            {% endfor %}
            {% for c in cards %}
                {%  if c.userDiscard %}
                    {%  if c.userDiscard.id == p.id %}
                        <div class="hidden-card-background">
                            <img class="hidden-card" src="{{ c.image }}" alt="">
                        </div>
                        {{ loop.index }}
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}
{% endfor %}



<div class="card-container my-cards">
<h3> {{ app.user.username }} </h3>

    {% for c in cards %}
        {%  if c.user %}

            {%  if c.user.id == app.user.id and c.isVisible == 0 %}
        <img src="{{ c.image }}" alt="">

                <form action="{{ path("play_card") }}" method="post">
                    <input type="hidden" name="card-to-play" value="{{ c.id }}">
                    <button type="submit">PLAY</button>
                </form>
            {% endif %}
        {% endif %}
    {% endfor %}


    <h3>I show my cards to others</h3>
    <form action="{{ path("show_my_cards") }}" method="post">
        <input type="hidden" name="card-to-play" >
        <button type="submit">SHOW</button>
    </form>


    <h3> Personal discarded cards </h3>
    {% for c in cards %}
        {%  if c.userDiscard %}
            {%  if c.userDiscard.id == app.user.id %}
                <div class="hidden-card-background">
                    <img class="hidden-card" src="{{ c.image }}" alt="">
                </div>

                <form action="{{ path("show_discarded_personal_card") }}" method="post">
                    <input type="hidden" name="card-to-show" value="{{ c.id }}">
                    <button type="submit">Show Discarded Card</button>
                </form>
            {% endif %}
        {% endif %}
    {% endfor %}


    <h3> Personal cards to show in front of me </h3>
    {% for c in cards %}
        {%  if c.user %}
            {%  if c.user.id == app.user.id and c.isVisible == 1 %}
                <div class="hidden-card-background">
                    <img src="{{ c.image }}" alt="">
                </div>
            {% endif %}
        {% endif %}
    {% endfor %}



</div>
{% include '/home/_game-distrib-one-card.html.twig' %}

<h3> In deck : {{ count_cards_in_deck}} </h3>

<div class="card-container">
    <div class="hidden-card-background">
    <img class="hidden-card"  alt="">
    </div>
    <form action="{{ path("play_deck_card") }}" method="post">
        <input type="hidden" name="card-to-play" value="from-deck-to-play">
        <button type="submit">PLAY</button>
    </form>
</div>


<h3> Discarded deck : {{ count_cards_in_discard_deck}} </h3>

<div class="card-container">
    <div class="hidden-card-background">
        <img class="hidden-card"  alt="">
    </div>
    <form action="{{ path("put_back_discarded") }}" method="post">
        <input type="hidden" name="card-to-play" value="from-deck-to-play">
        <button type="submit">PUT ALL BACK TO DECK</button>
    </form>
</div>




<div class="card-container">
    <h3> Visible cards on table </h3>
    {% for c in cards %}
        {%  if c.isVisible %}
            <img src="{{ c.image }}" alt="">
            <form action="{{ path("take_card") }}" method="post">
                <input type="hidden" name="card-to-take" value="{{ c.id }}">
                <button type="submit">Take Card</button>
            </form>


        {% endif %}
    {% endfor %}
    <a class="btn btn-danger" href="{{ path("discard_all_cards") }}">Discard into global</a>
    <a class="btn btn-info" href="{{ path("discard_cards_personal") }}">Discard into my pile</a>

</div>

<div class="card-container">
    <h3> Played cards </h3>
    {%  if last_played_card %}
       <img src="{{ last_played_card.image }}" alt="">
    {% endif %}
</div>

<div class="card-container">
    <h3> Discarded Cards (just a pile in the future) </h3>
    {% for c in cards %}
        {%  if c.isDiscard %}
            <img src="{{ c.image }}" alt="">
        {% endif %}
    {% endfor %}
</div>



