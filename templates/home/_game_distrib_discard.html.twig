<div class="modal fade" id="personal-discard" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Distribute to discard <i class="fas fa-inbox"></i></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form class="form" action="{{ path("distribute_discard") }}" method="post">
                    {% for user in users %}
                        <ul>
                            <li >
                                <div class="d-flex justify-content-between">
                                    <span><i class="fas fa-user"></i>{{ user.username }}</span>
                                    <input type="number" name="{{ user.id }}">
                                </div></li>
                        </ul>
                    {% endfor %}
                    <button type="submit" class="btn btn-success modal-button-distribute">
                        Distribute
                </form>
            </div>
        </div>
    </div>
</div>